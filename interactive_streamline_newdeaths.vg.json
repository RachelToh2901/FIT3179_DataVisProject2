{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/TohXiaoYing/FIT3179_DataVisProject2/main/data/owid_covid_ALL.csv"
    },
    "params": [
        {
        "name": "Continent_selection",
        "bind": {
        "input": "select",
        "options": [
            null,
            "Africa",
            "Asia",
            "Europe",
            "North America",
            "Oceania",
            "South America"
            ],
        "labels":[
            "Show All",
            "Africa",
            "Asia",
            "Europe",
            "North America",
            "Oceania",
            "South America"
            ],
      "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
        {"filter":"datum.continent != '' "},
        {
            "filter": "Continent_selection == null || datum.continent == Continent_selection"
        }
      ],
    "vconcat": [
        {
            "width": 550,
            "height": 400,
            "mark": "area",
            "encoding": {
                "x": {
                    "field": "conv_date", 
                    "timeUnit": "yearmonthdate", 
                    "scale": {"domain": {"param": "brush"}},
                    "axis": {"title": "","domain": false,  "tickSize": 0}},
                "y": {
                    "aggregate": "sum", "field": "new_deaths"
                },
                "tooltip":[
                    {"field": "conv_date", "timeUnit": "yearmonthdate",  "title": "Date"},
                    {"field": "new_deaths", "aggregate": "sum", "title": "New Deaths"}
                    
                ],
                "color": {
                    "field": "continent", 
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "Africa",
                            "Asia",
                            "Europe",
                            "North America",
                            "Oceania",
                            "South America"
                        ],
                        "range" :[
                            "#4c78ab",
                            "#f58518",
                            "#e45756",
                            "#83bcb6",
                            "#54a24b",
                            "#f2cf5b"
                        ]
                    }
                }
                    
            }
        },
        {
            "width": 550,
            "height": 60,
            "mark": "line",
            "params": [
                {"name": "brush", 
                "select": {"type": "interval","encodings": ["x"]}}
                ],                
            "encoding": {
                "x": {
                    "timeUnit": "yearmonthdate",
                    "field": "conv_date"
                  },
                "y": {
                    "aggregate": "sum",
                    "field": "new_deaths",
                    "type": "quantitative",
                    "axis": {"tickCount": 3, "grid": false}
                }
            }
        }
    ]
}
